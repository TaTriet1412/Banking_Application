<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BankingApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.BankingApplication" parent="Base.Theme.BankingApplication" />

    <style name="Text">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/text_default</item>
        <item name="android:textSize">@dimen/text_default_size</item>
    </style>

    <!--    Dùng cho tất cả Button dài bo góc tối đa   -->
    <style name="Button" parent="Text">
        <item name="android:fontFamily">@font/lato_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">1dp</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Rounded13">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">13%</item>
    </style>

    <style name="ButtonSignUp" parent="Text">
        <item name="android:fontFamily">@font/lato_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">1dp</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:background">@drawable/bg_button_sign_up</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="InfoEditText" parent="Text">
        <item name="android:background">@drawable/bg_input_field</item>
        <item name="android:padding">10dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">50</item>
        <item name="android:textSize">@dimen/text_default_size</item>
        <item name="android:textColor">@color/text_default</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">23dp</item>
        <item name="android:paddingEnd">23dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="Circle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>