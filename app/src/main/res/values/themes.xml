<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BankingApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.BankingApplication" parent="Base.Theme.BankingApplication" />

    <style name="Text">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/text_default</item>
        <item name="android:textSize">@dimen/text_default_size</item>
    </style>

    <!--    Dùng cho tất cả Button dài bo góc tối đa   -->
    <style name="Button" parent="Text">
        <item name="android:fontFamily">@font/lato_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">1dp</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Rounded13">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">13%</item>
    </style>

    <style name="ButtonSignUp" parent="Text">
        <item name="android:fontFamily">@font/lato_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">1dp</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:background">@drawable/bg_button_sign_up</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ButtonSignIn" parent="Text">
        <item name="android:fontFamily">@font/lato_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">1dp</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:background">@drawable/bg_btn_gradient_green</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="InfoEditText" parent="Text">
        <item name="android:background">@drawable/bg_input_field</item>
        <item name="android:padding">10dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">50</item>
        <item name="android:textSize">@dimen/text_default_size</item>
        <item name="android:textColor">@color/text_default</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">23dp</item>
        <item name="android:paddingEnd">23dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="OfficerProfileLabel" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/staff_profile_field_margin_top</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyCustomBottomNavStyle" parent="Widget.Material3.BottomNavigationView"> <!-- Hoặc parent tương ứng -->
        <item name="itemIconTint">@null</item>
        <!-- Các thuộc tính khác -->
    </style>

    <style name="OfficerProfileValue" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:layout_marginStart">@dimen/staff_profile_field_value_margin_start</item>

    </style>

    <style name="Circle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomerDetailLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="CustomerDetailValue">
        <item name="android:layout_width">0dp</item> <!-- Để nó co giãn -->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">fill_horizontal|center_vertical</item>
        <item name="android:layout_columnWeight">1</item> <!-- Quan trọng -->
    </style>

</resources>