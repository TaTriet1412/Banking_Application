<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Card tổng số tiền tiết kiệm -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/gradient_green"> <!-- Màu nền của bạn -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số tiền tiết kiệm đã tích lũy"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_officer_saving_total_accumulated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1.000.000 VNĐ"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Card chi tiết tài khoản tiết kiệm -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Số dư tài khoản tiết kiệm -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Số dư tài khoản tiết kiệm"
                    android:textColor="@color/text_grey_label"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_officer_saving_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="500.000 VNĐ"
                    android:textColor="@color/text_dark"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Lãi suất hiện tại -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lãi suất hiện tại"
                    android:textColor="@color/text_grey_label"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_officer_saving_interest_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="5.5 %"
                    android:textColor="@color/text_dark"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_officer_mortgage_details_indicator"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tài khoản tiết kiệm"
                android:layout_marginTop="16dp"
                android:enabled="false"
                android:backgroundTint="@color/light_orange_background"
                android:textColor="@color/dark_orange_text" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>