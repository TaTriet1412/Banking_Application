<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="@drawable/dialog_rounded_bg">

    <ImageView
        android:id="@+id/iv_success_icon_dialog"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_success_check_big_green"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tv_success_title_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giao dịch thành công!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/green_primary"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tv_success_message_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/text_dark"
        android:textSize="16sp"
        android:layout_marginBottom="24dp"
        android:text="Nạp tiền 50.000đ vào tài khoản 1231231234 thành công."/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_ok_success_dialog"
        android:layout_width="wrap_content"
        android:minWidth="120dp"
        android:layout_height="wrap_content"
        android:text="Đồng ý"
        android:background="@drawable/bg_btn_gradient_green_vertical"
        android:textColor="@android:color/white"/>
</LinearLayout>