<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_grey_light"
    tools:context=".ConfirmElectricityPaymentActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_confirm_electricity"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/green_primary"
        app:title="Xác nhận thông tin"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/ic_arrow_back_white_24dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Mã hóa đơn -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mã hóa đơn"
                    android:textColor="@color/text_color_secondary_dark"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/tv_confirm_bill_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="PE123456789"
                    android:textColor="@color/text_color_primary_dark"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <View style="@style/Divider"/>

            <!-- Tên khách hàng -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tên khách hàng"
                    android:textColor="@color/text_color_secondary_dark"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/tv_confirm_customer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Nguyễn Văn A"
                    android:textColor="@color/text_color_primary_dark"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <View style="@style/Divider"/>

            <!-- Nhà cung cấp -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nhà cung cấp"
                    android:textColor="@color/text_color_secondary_dark"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/tv_confirm_provider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="EVN Miền Nam"
                    android:textColor="@color/text_color_primary_dark"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <View style="@style/Divider"/>
            <!-- Ngày hết hạn -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ngày hết hạn"
                    android:textColor="@color/text_color_secondary_dark"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/tv_confirm_due_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="25/12/2024 17:00"
                    android:textColor="@color/text_color_primary_dark"
                    android:textSize="16sp"/>
            </LinearLayout>

            <View style="@style/Divider"/>
            <!-- Số tiền thanh toán -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Số tiền thanh toán"
                    android:textColor="@color/text_color_secondary_dark"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/tv_confirm_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="429,149 VND"
                    android:textColor="@color/red_error"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"/>
                <TextView
                    android:id="@+id/tv_confirm_amount_in_words"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_error"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>
            <View style="@style/Divider"/>
            <TextView
                android:id="@+id/tv_confirm_bill_status_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:padding="8dp"
                android:textSize="15sp"
                android:textStyle="italic|bold"
                android:gravity="center_horizontal"
                android:visibility="gone"
                tools:text="Hóa đơn này đã quá hạn thanh toán!"
                tools:textColor="@android:color/holo_red_dark"
                tools:visibility="visible"/>

            <!-- Phương thức xác thực (nếu cần, nếu không thì bỏ) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_authentication_method"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Chọn phương thức xác thực"
                android:layout_marginTop="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp">

                <AutoCompleteTextView
                    android:id="@+id/actv_authentication_method"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    tools:text="Smart OTP"/>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_confirm_payment_final"
        android:background="@drawable/bg_btn_gradient_green_vertical"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xác nhận"
        android:layout_margin="16dp"
        app:cornerRadius="8dp"/>

</LinearLayout>